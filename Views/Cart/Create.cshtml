@using BackendService.Models.DTO;
@model List<UserDTO>

@{
    ViewData["Title"] = "Create Cart";
}

<h1>Create Cart</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>
                        <form asp-action="Create" asp-route-userId="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
