@model BackendService.Models.DTO.CartItemDTO

<h4>Edit Cart Item</h4>
<form asp-controller="Cart" asp-action="UpdateCartItem" method="post">
    <input type="hidden" name="CartId" value="@Model.CartId" />
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="ProductId">ProductId</label>
        <input type="number" id="ProductId" name="ProductId" class="form-control" value="@Model.ProductId" required />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Item</button>
</form>
